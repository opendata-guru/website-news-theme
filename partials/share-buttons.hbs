{{#if @config.custom.shareFacebook}}
   <a
      href="https://www.facebook.com/sharer/sharer.php?u={{encodeUrlFragment url}}"
      class="js-share facebook mr-2"
	  style="background:#1877f2;width:36px;height:36px;border-radius:50%;display:inline-block;text-align:center;line-height:36px;font-size:20px;color:#fff;"
      title="{{ translate 'partials.shareButtons.shareWithFacebook' }}"
      rel="nofollow noopener noreferrer"
      aria-label="{{ translate 'partials.shareButtons.shareWithFacebook' }}">
	   <i class="fa fa-facebook"></i>
   </a>
{{/if}}

{{#if @config.custom.shareTwitter}}
   <a
      href="https://twitter.com/share?url={{encodeUrlFragment url}}&amp;via={{#if @config.custom.shareTwitterName}}{{encodeUrlFragment @config.custom.shareTwitterName}}{{else}}{{encodeUrlFragment @website.name}}{{/if}}&amp;text={{encodeUrlFragment title}}"
      class="js-share twitter mr-2"
	  style="background:#1da1f2;width:36px;height:36px;border-radius:50%;display:inline-block;text-align:center;line-height:36px;font-size:20px;color:#fff;"
      title="{{ translate 'partials.shareButtons.shareWithTwitter' }}"
      rel="nofollow noopener noreferrer"
      aria-label="{{ translate 'partials.shareButtons.shareWithTwitter' }}">
	   <i class="fa fa-twitter"></i>
   </a>
{{/if}}

{{#if @config.custom.sharePinterest}}
   <a
      href="https://pinterest.com/pin/create/button/?url={{encodeUrlFragment url}}&amp;media={{encodeUrlFragment featuredImage.url}}&amp;description={{encodeUrlFragment title}}"
      class="js-share pinterest"
      title="{{ translate 'partials.shareButtons.shareWithPinterest' }}"
      rel="nofollow noopener noreferrer"
      aria-label="{{ translate 'partials.shareButtons.shareWithPinterest' }}">
      <svg class="u-icon" style="width:36px;height:36px;">
         <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#pinterest"/>
      </svg>
   </a>
{{/if}}

