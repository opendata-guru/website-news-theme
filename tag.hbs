{{> head}}
{{> top}}
<main class="main">
   <div class="page u-author">
      {{#tag}}
         <h1 class="page__title box__title">{{name}}</h1>
         {{#if description}}
            <p>{{description}}</p>
         {{/if}}
      {{/tag}}
   </div>
   <div class="cat {{@config.custom.layoutTags}}">
      {{#each posts}}
         {{#if @config.custom.tagAd}}
            {{#checkIf @config.custom.layoutTags '==' "cat--layout-2col" }}
               {{#checkIf @index '==' 6}}
                  <div class="u-ads cat--layout-2col__2span">
                     <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                     {{{@config.custom.tagAdCode}}}
                  </div>
               {{/checkIf}}
            {{/checkIf}}
         {{/if}}
         <article class="cat__item">
            {{#if @config.custom.tagAd}}
               {{#checkIf @config.custom.layoutTags '==' "cat--layout-1col" }}
                  {{#checkIf @index '==' 5}}
                     <div class="u-ads">
                        <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                        {{{@config.custom.tagAdCode}}}
                     </div>
                  {{/checkIf}}
               {{/checkIf}}
               {{#checkIf @config.custom.layoutTags '==' "cat--layout-2col-1-4" }}
                  {{#checkIf @index '==' 5}}
                     <div class="u-ads">
                        <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                        {{{@config.custom.tagAdCode}}}
                     </div>
                  {{/checkIf}}
               {{/checkIf}}
               {{#checkIf @config.custom.layoutTags '==' "cat--layout-2col-2-1" }}
                  {{#checkIf @index '==' 5}}
                     <div class="u-ads">
                        <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                        {{{@config.custom.tagAdCode}}}
                     </div>
                  {{/checkIf}}
               {{/checkIf}}
            {{/if}}

            <div class="cat__item-inner">
               {{#featuredImage}}
                 {{#if url}}
                  {{#if @config.custom.lazyLoad}}
                     <a
                        href="{{../url}}"
                        class="cat__item-image-link">
                        <img
                           class="lazyload cat__item-image"
                           {{#checkIf @config.custom.lazyLoadEffect '!==' "fadein" }}
                              src="{{urlXs}}"
                           {{else}}
                              data-src="{{url}}"
                           {{/checkIf}}
                           data-srcset="{{srcset.listing}}"
                           data-aspectratio="{{ math width '/' height }}"
                           data-sizes="auto"
                           data-expand="300"
                           height="{{height}}"
                           width="{{width}}"
                           alt="{{alt}}">
                     </a>
                  {{else}}
                     <a href="{{../url}}">
                        <img
                           class="cat__item-image"
                           src="{{url}}"
                           sizes="{{sizes.listing}}"
                           srcset="{{srcset.listing}}"
                           alt="{{alt}}">
                     </a>
                  {{/if}}
                 {{/if}}
               {{/featuredImage}}
               <header class="u-header">                  
                     <h2 class="h5 cat__item-title">
                        <a href="{{url}}">
                           {{title}}
                        </a>
                     </h2>                
                  {{#checkIfAny @config.custom.tagAuthorAvatar @config.custom.tagAuthorName @config.custom.tagDate @config.custom.tagTag}}
                     <div class="u-header__meta u-small">
                        {{#if @config.custom.tagAuthorAvatar}}
                           {{#author}}
                              {{#if avatar}}
                                 {{#if @config.custom.lazyLoad}}
                                    <img class="lazyload u-header__avatar" data-src="{{avatar}}" alt="{{name}}">
                                 {{else}}
                                    <img src="{{avatar}}" alt="{{name}}" class="u-header__avatar">
                                 {{/if}}
                              {{/if}}
                           {{/author}}
                        {{/if}}
                        <div>
                           {{#if @config.custom.tagAuthorName}}
                              {{#author}}
                                 <a href="{{url}}" title="{{name}}">{{name}}</a>
                              {{/author}}
                           {{/if}}

                           {{#if @config.custom.tagDate}}
                              <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                 {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                                    {{date createdAt @config.custom.formatDate}}
                                 {{else}}
                                    {{date createdAt @config.custom.formatDateCustom}}
                                 {{/checkIf}}
                              </time>
                           {{/if}}
                        </div>
                        {{#if @config.custom.tagTag}}
                           {{#if mainTag}}
                              <a
                                 href="{{mainTag.url}}"
                                 class="{{#featuredImage}}
                                                 {{#if url}}cat__item-tag{{/if}}{{/featuredImage}} u-tag {{ getTagColor slug @config.custom.tagColors}}">{{mainTag.name}}</a>
                           {{/if}}
                        {{/if}}
                     </div>
                  {{/checkIfAny}}
               </header>
               {{#if @config.custom.tagCommentCount}}
                  <footer>
                     <a
                        href="{{url}}#disqus_thread"
                        data-disqus-identifier="{{id}}"
                        class="u-comment-count"
                        rel="nofollow">0</a>
                  </footer>
               {{/if}}
            </div>
            {{#if @config.custom.tagAd}}
               {{#checkIf @config.custom.layoutTags '==' "cat--layout-2col-4-1" }}
                  {{#checkIf @index '==' 4}}
                     <div class="u-ads u-ads--mt">
                        <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                        {{{@config.custom.tagAdCode}}}
                     </div>
                  {{/checkIf}}
               {{/checkIf}}
               {{#checkIf @config.custom.layoutTags '==' "cat--layout-2col-1-2" }}
                  {{#checkIf @index '==' 3}}
                     <div class="u-ads u-ads--mt">
                        <h3 class="u-ads__title">{{ translate 'listing.advertisement' }}</h3>
                        {{{@config.custom.tagAdCode}}}
                     </div>
                  {{/checkIf}}
               {{/checkIf}}
            {{/if}}
         </article>
      {{/each}}
      {{#if @pagination}}
          <nav class="pagination {{#checkIf @config.custom.layoutTags '!=' "cat--layout-1col" }}cat--layout-2col__2span{{/checkIf}}">
            {{> pagination}}
         </nav>
      {{/if}}
   </div>
</main>
{{> sidebar}}
{{> footer}}
